<head>
  <title>Title</title>
  <link
    rel="stylesheet"
    href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
  />
</head>

<body>
  <div class="container">
    <a href="/"><h3>Home page</h3></a>
    <h2>ADD PRODUCT</h2>
    <form action="/" method="POST">
      <div class="form-group">
        <label>Product name</label>
        <input class="form-control" type="text" name="productName" />
      </div>
      <div class="form-group">
        <label>Product content</label>
        <input class="form-control" type="text" name="productContent" />
      </div>
      <div class="form-group">
        <label>Link img</label>
        <input class="form-control" type="text" name="productImg" />
      </div>
      <div class="form-group">
        <label>Product price</label>
        <input class="form-control" type="number" name="productPrice" />
      </div>
      <div class="form-group">
        <label>Product rating</label>
        <input class="form-control" type="number" name="productRating" />
      </div>
      <input
        id="add-btn"
        class="btn btn-primary"
        type="submit"
        value="ADD PRODUCT"
      />
    </form>
  </div>
</body>
